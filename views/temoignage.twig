{% include 'header.twig' %}

<div class="container">
    <form method="post" action="/temoignage" class="form-group">
        <div class="champ">
            <label for="message">Message</label><br>
            <textarea name="message" id="message"></textarea>
        </div>
        <br>
        <button type="submit" class="btn btn-success btn-lg">Envoyer</button>
    </form>
</div>

<div class="comments">
    <h3>Commentaires</h3>
    {% for message in messages %}
    <div class="comments">
        
        <div class="content">
            <div class="metadata">
                <div class="date">
                    {{ message.created_at.fromNow() }}
                </div>
            </div>
            <div class="test">{{ message.content }}</div>
        </div>
    </div>
    {% endfor %}
</div>

{% include 'footer.twig' %}